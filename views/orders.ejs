<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Inter' rel="stylesheet">
        <link rel="stylesheet" href="/public/style.css">
        <title><%= typeof title != 'undefined' ? title: 'My medication orders' %></title>
    </head>

    <body>
      <% if(orders != null) { %>
        <%- include('partials/header'); %>

          <div class="wrapper">
            <div class="information">

                <% orders.forEach(function(order, index) { %>
                    <a href="/order/<%- order.resource.id %>" class="information__card">
                      <div class="icon">
                        <i class="i">
                        <img src="../public/images/orders.png">
                      </i>
                    </div>
                    <h6> Medication reference: <%= order.resource.medicationReference.reference %> </h6>
                    <p class="p"> Contains: <%= order.resource.contained[0].code.text %> </p>
                    <p class="p"> Product: <%= order.resource.contained[0].product[0].form.text %> </p>
                    <p class="p"> Date prescribed: <%= order.resource.dateWritten %> </p>
                  </a>
                <% }) %>
            </div>
          </div>

          <%- include('partials/footer'); %>
          <% } else { %>
            No medical orders found.
            <%- include('partials/footer'); %>
        <% } %>
    </body>
</html>